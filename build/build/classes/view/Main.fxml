<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>

<Pane prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Main">
   <children>
      <MenuBar layoutY="2.0" prefHeight="13.0" prefWidth="800.0">
        <menus>
          <Menu mnemonicParsing="false" text="Cadastro">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#startProdutoCadastro" text="Produto" />
                  <MenuItem mnemonicParsing="false" onAction="#startClienteCadastro" text="Cliente" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Venda">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#startVendaLocal" text="Local" />
                  <MenuItem mnemonicParsing="false" onAction="#startVendaDelivery" text="Delivery" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Gerencia">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#startLogin" text="Acessar" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Opções">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#startAbout" text="About" />
               </items>
            </Menu>
        </menus>
      </MenuBar>
      <ImageView fitHeight="522.0" fitWidth="532.0" layoutX="139.0" layoutY="110.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@./resources/logo.jpg" />
         </image>
      </ImageView>
   </children>
</Pane>
